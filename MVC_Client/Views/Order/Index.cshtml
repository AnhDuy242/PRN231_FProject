<h1 style="text-align: center;"><strong>List Order</strong></h1>
<form asp-controller="Order" asp-action="Index" method="post" style="margin-left: 450px; margin-bottom: 20px;">
    <input type="text" name="From" style="width: 300px; height: 50px; margin-bottom: 10px;" placeholder="Input From Date" />
    <input type="text" name="To" style="width: 300px; height: 50px; margin-bottom: 10px;" placeholder="Input To Date" />
    <input type="submit" value="Search" style="padding: 5px 10px; background-color: #007bff; color: #fff; border: none; cursor: pointer;" />
</form>

<button type="button" class="btn btn-primary" style="margin-bottom: 20px;"><a style="color: #fff; text-decoration: none;" asp-action="AddOrder">Add New Order</a></button>

<table class="table" style="border-collapse: collapse; width: 100%; border: 1px solid #ddd;">
    <thead class="thead-dark">
        <tr style="border: 1px solid #ddd;">
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">#</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">OrderId</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">EmployeeId</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">EmployeeName</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">CustomerId</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">CustomerName</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">ShipVia</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">OrderDate</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">RequiredDate</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">ShippedDate</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">ShipAddress</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">TotalAmount</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">IsLateOrder</th>
            <th scope="col"></th>
            <th scope="col">Action</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (OrderVM p in Model)
        {
            <tr style="border: 1px solid #ddd;">
                <td style="border: 1px solid #ddd; padding: 8px;">#</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.OrderId</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.EmployeeId</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.EmployeeName</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.CustomerId</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.CustomerName</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.ShipVia</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.OrderDate</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.RequiredDate</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.ShippedDate</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.ShipAddress</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.TotalAmount</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.IsLateOrder</td>
                <td style="border: 1px solid #ddd; padding: 8px;">
                    <button type="button" class="btn btn-danger"><a style="color: #fff; text-decoration: none;" asp-action="Delete" asp-route-id="@p.OrderId">Delete</a></button>
                </td>
                <td style="border: 1px solid #ddd; padding: 8px;">
                    <button type="button" class="btn btn-primary"><a style="color: #fff; text-decoration: none;" asp-action="Update" asp-route-id="@p.OrderId">Update</a></button>
                </td>
                <td style="border: 1px solid #ddd; padding: 8px;">
                    <button type="button" class="btn btn-success"><a style="color: #fff; text-decoration: none;" asp-action="Details" asp-route-id="@p.OrderId">Detail</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>
