<form asp-controller="Order" asp-action="AddOrder" method="post">
    <div class="container">
        <h1>Add Order</h1>
        <p>Please fill in this form to create a Product.</p>
        <hr>

        <label for="CustomerId"><b>CustomerId</b></label>
        <input asp-for="CustomerId" type="text" placeholder="Enter CustomerId" required><br />


        <label for="EmployeeId"><b>EmployeeId</b></label>
        <input asp-for="EmployeeId" type="text" placeholder="Enter EmployeeId" required><br />

        <label for="OrderDate"><b>OrderDate</b></label>
        <input asp-for="OrderDate" type="date" placeholder="Enter OrderDate" required><br />



        <label for="RequiredDate"><b>RequiredDate</b></label>
        <input asp-for="RequiredDate" type="date" placeholder="Enter RequiredDate" required><br />


        <label for="ShippedDate"><b>ShippedDate</b></label>
        <input asp-for="ShippedDate" type="date" placeholder="Enter ShippedDate" required><br />

        <label for="ShipVia"><b>ShipVia</b></label>
        <input asp-for="ShipVia" type="text" placeholder="Enter ShipVia" required><br />

        <label for="Freight"><b>Freight</b></label>
        <input asp-for="Freight" type="text" placeholder="Enter Freight" required><br />

        <label for="ShipName"><b>ShipName</b></label>
        <input asp-for="ShipName" type="text" placeholder="Enter ShipName" required>
        <br />


        <label for="ShipAddress"><b>ShipAddress</b></label>
        <input asp-for="ShipAddress" type="text" placeholder="Enter ShipAddress" required><br />


        <label for="ShipCity"><b>ShipCity</b></label>
        <input asp-for="ShipCity" type="text" placeholder="Enter ShipCity" required><br />

        <label for="ShipRegion"><b>ShipRegion</b></label>
        <input asp-for="ShipRegion" type="text" placeholder="Enter ShipRegion" required><br />

        <label for="ShipPostalCode"><b>ShipPostalCode</b></label>
        <input asp-for="ShipPostalCode" type="text" placeholder="Enter ShipPostalCode" required><br />


        <label for="ShipCountry"><b>ShipCountry</b></label>
        <input asp-for="ShipCountry" type="text" placeholder="Enter ShipCountry" required><br />

        <hr>


        <button type="submit" class="CreateBtn">Create Product</button>
    </div>


</form>