@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using MVC_Client.Model.Category;

@model CategoryVM
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

@if (Context.Session.GetString("Key") == "" || Context.Session.GetString("Key") == null)
{
    <script>

        window.location.href = '/Home';


    </script>

}
<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="/Product/Index">Products</a>
        </div>
        <div class="navbar-header">
            <a class="navbar-brand" href="/Category/Index">Category</a>
        </div>
        <div class="navbar-header">
            <a class="navbar-brand" href="/Supplier/Index">Supplier</a>
        </div>
        <div class="navbar-header">
            <a class="navbar-brand" href="/Customer/Index">Customer</a>
        </div>
        <div class="navbar-header">
            <a class="navbar-brand" href="/Order/Index">Order</a>
        </div>

        <div class="navbar-header">
            <a class="navbar-brand" href="/Home/Logout">Logout</a>
        </div>

    </div>
</nav>
@{

    CategoryVM p = ViewData["category"] as CategoryVM;
}

<form asp-controller="Category" asp-action="UpdateCategory" method="post">
    <div class="container">
        <h1>Update Category</h1>
        
        <hr>
        <label for="CategoryId"><b>CategoryId</b></label>
        <input asp-for="CategoryId" type="text" value="@p.CategoryId" readonly="">
        <br />

        <label for="CategoryName"><b>CategoryName</b></label>
        <input asp-for="CategoryName" type="text" value="@p.CategoryName" >

        <br />


        <label for="Description"><b>Description</b></label>
        <input asp-for="Description" type="text" value="@p.Description" placeholder="Enter ProductName" required><br />


        
        <br />
        <button type="submit" class="CreateBtn">Update Category</button>





        <hr>



    </div>


</form>