<form asp-controller="Category" asp-action="AddCategory" method="post">
    <div class="container">
        <h1>Add Category</h1>
        <p>Please fill in this form to create a Category.</p>
        <hr>



        <label for="CategoryName"><b>CategoryName</b></label>
        <input asp-for="CategoryName" type="text" placeholder="Enter CategoryName" required><br />

        <label for="Description"><b>Description</b></label>
        <input asp-for="Description" type="text" placeholder="Enter Description" required><br />



        


        <button type="submit" class="CreateBtn">Create Category</button>
    </div>


</form>