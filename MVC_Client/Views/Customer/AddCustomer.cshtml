<form asp-controller="Customer" asp-action="AddCustomer" method="post">
    <div class="container">
        <h1>Add Customer</h1>
        
        <hr>

        <label for="CustomerId"><b>CustomerId</b></label>
        <input asp-for="CustomerId" type="text" placeholder="Enter CustomerId" required><br />


        <label for="CompanyName"><b>CompanyName</b></label>
        <input asp-for="CompanyName" type="text" placeholder="Enter CompanyName" required><br />

        <label for="ContactName"><b>ContactName</b></label>
        <input asp-for="ContactName" type="text" placeholder="Enter ContactName" required><br />



        <label for="ContactTitle"><b>ContactTitle</b></label>
        <input asp-for="ContactTitle" type="date" placeholder="Enter ContactTitle" required><br />


        <label for="Address"><b>Address</b></label>
        <input asp-for="Address" type="date" placeholder="Enter Address" required><br />

        <label for="City"><b>City</b></label>
        <input asp-for="City" type="text" placeholder="Enter City" required><br />

        <label for="Region"><b>Region</b></label>
        <input asp-for="Region" type="text" placeholder="Enter Region" required><br />

        <label for="PostalCode"><b>PostalCode</b></label>
        <input asp-for="PostalCode" type="text" placeholder="Enter PostalCode" required>
        <br />


        <label for="Country"><b>Country</b></label>
        <input asp-for="Country" type="text" placeholder="Enter Country" required><br />


        <label for="Phone"><b>Phone</b></label>
        <input asp-for="Phone" type="text" placeholder="Enter Phone" required><br />

        <label for="Fax"><b>Fax</b></label>
        <input asp-for="Fax" type="text" placeholder="Enter Fax" required><br />

      


        <button type="submit" class="CreateBtn">Create Customer</button>
    </div>


</form>