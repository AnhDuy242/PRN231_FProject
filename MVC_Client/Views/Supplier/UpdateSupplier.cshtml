@{

    SupplierVM p = ViewData["supplier"] as SupplierVM;
}

<form asp-controller="Supplier" asp-action="UpdateSupplier" method="post">
    <div class="container">
        <h1>Update Supplier</h1>
        
        <hr>

        <label for="SupplierId"><b>SupplierId</b></label>
        <input asp-for="SupplierId" type="text" value="@p.SupplierId" readonly="">

        <br />


        <label for="CompanyName"><b>CompanyName</b></label>
        <input asp-for="CompanyName" type="text" value="@p.CompanyName" placeholder="Enter CompanyName" required><br />


        <label for="ContactName"><b>ContactName</b></label>
        <input asp-for="ContactName" type="text" value="@p.ContactName" placeholder="Enter ContactName" required>

        <br />

        <label for="ContactTitle"><b>ContactTitle</b></label>
        <input asp-for="ContactTitle" type="text" value="@p.ContactTitle" placeholder="Enter ContactTitle" required>

        <br />



        <label for="Address"><b>Address</b></label>
        <input asp-for="Address" type="text" value="@p.Address" placeholder="Enter Address" required>

        <br />


        <label for="City"><b>City</b></label>
        <input asp-for="City" type="text" value="@p.City" placeholder="Enter City" required>

        <br />

        <label for="Region"><b>Region</b></label>
        <input asp-for="Region" type="text" value="@p.Region" placeholder="Enter Region" required>

        <br />


        <label for="PostalCode"><b>PostalCode</b></label>
        <input asp-for="PostalCode" type="text" value="@p.PostalCode" placeholder="Enter PostalCode" required>

        <br />

        <label for="Country"><b>Country</b></label>
        <input asp-for="Country" type="text" value="@p.Country" placeholder="Enter Country" required>
        <br />


        <label for="Phone"><b>Phone</b></label>
        <input asp-for="Phone" type="text" value="@p.Phone" placeholder="Enter Phone" required>

        <br />

        <label for="Fax"><b>Fax</b></label>
        <input asp-for="Fax" type="text" value="@p.Fax" placeholder="Enter Fax" required>

        <br />

        <label for="HomePage"><b>HomePage</b></label>
        <input asp-for="HomePage" type=" text" value="@p.HomePage" placeholder="Enter HomePage" required>

        <br />
        <button type="submit" class="CreateBtn">Update Supplier</button>





        <hr>



    </div>


</form>