<h1><strong>Detail Supplier</strong></h1>
<table class="table">
    @foreach (SupplierVM p in Model)
    {
        <tr>
            <td scope="col">SupplierId</td>
            <td>@p.SupplierId</td>
        </tr>
        <tr>
            <td scope="col">CompanyName</td>
            <td>@p.CompanyName</td>
        </tr>
        <tr>
            <td scope="col">ContactName</td>
            <td>@p.ContactName</td>
        </tr>
        <tr>
            <td scope="col">ContactTitle</td>
            <td>@p.ContactTitle</td>
        </tr>
        <tr>
            <td scope="col">Address</td>
            <td>@p.Address</td>
        </tr>
        <tr>
            <td scope="col">City</td>
            <td>@p.City</td>
        </tr>
        <tr>
            <td scope="col">Region</td>
            <td>@p.Region</td>
        </tr>
        <tr>
            <td scope="col">PostalCode</td>
            <td>@p.PostalCode</td>
        </tr>
        <tr>
            <td scope="col">Country</td>
            <td>@p.Country</td>
        </tr>
        <tr>
            <td scope="col">Phone</td>
            <td>@p.Phone</td>
        </tr>
        <tr>
            <td scope="col">Fax</td>
            <td>@p.Fax</td>
        </tr>

        <tr>
            <td scope="col">HomePage</td>
            <td>@p.HomePage</td>
        </tr>


    }
</table>