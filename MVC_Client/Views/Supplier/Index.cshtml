<h1 style="margin-bottom: 20px; text-align:center; ">List Supplier</h1>
<div style="display: flex; justify-content: center; align-items: center;">
    <form asp-controller="Supplier" asp-action="Index" method="post" style="margin-bottom: 20px;">
        <input type="text" name="id" style="width: 300px; height: 50px; padding: 5px;" placeholder="Input Product Id" />
        <input type="submit" value="Search" style="padding: 5px 10px; background-color: #007bff; color: #fff; border: none; cursor: pointer;" />
    </form>
</div>

<button type="button" class="btn btn-primary" style="margin-bottom: 20px;"><a style="color: #fff; text-decoration: none;" asp-action="AddSupplier">Add New Supplier</a></button>

<table class="table" style="border-collapse: collapse; width: 100%; border: 1px solid #ddd;">
    <thead class="thead-dark">
        <tr style="border: 1px solid #ddd;">
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">#</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">SupplierId</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">CompanyName</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">ContactName</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">ContactTitle</th>
            <th scope="col" style="border: 1px solid #ddd; padding: 8px;">Address</th>
            <th scope="col" ></th>
            <th scope="col" >Action</th>
            <th scope="col" ></th>
        </tr>
    </thead>
    <tbody>
        @foreach (SupplierVM p in Model)
        {
            <tr style="border: 1px solid #ddd;">
                <td style="border: 1px solid #ddd; padding: 8px;">#</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.SupplierId</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.CompanyName</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.ContactName</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.ContactTitle</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@p.Address</td>
                <td style="border: 1px solid #ddd; padding: 8px;">
                    <button type="button" class="btn btn-danger"><a style="color: #fff; text-decoration: none;" asp-action="Delete" asp-route-id="@p.SupplierId">Delete</a></button>
                </td>
                <td style="border: 1px solid #ddd; padding: 8px;">
                    <button type="button" class="btn btn-primary"><a style="color: #fff; text-decoration: none;" asp-action="Update" asp-route-id="@p.SupplierId">Update</a></button>
                </td>
                <td style="border: 1px solid #ddd; padding: 8px;">
                    <button type="button" class="btn btn-success"><a style="color: #fff; text-decoration: none;" asp-action="Details" asp-route-id="@p.SupplierId">Detail</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>
